{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=wms.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Warehouse": {
    "DefaultWarehouseCode": "MAIN",
    "ReceivingLocationCode": "RECEIVE",
    "ScannerTimeout": 5000,
    "EnableAudioFeedback": true
  },
  "WmsSettings": {
    "LowStockThreshold": 10,
    "AutoRefreshDashboard": true,
    "RefreshIntervalMinutes": 5,
    "DefaultReceiveLocation": "RECEIVE",
    "MaxBarcodeLength": 50,
    "MinBarcodeLength": 3,
    "EnableModernUI": true,
    "Theme": "Bootstrap5"
  }
}