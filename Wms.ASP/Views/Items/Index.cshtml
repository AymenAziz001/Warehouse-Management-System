@model ItemManagementViewModel
@{
    ViewData["Title"] = "Item Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="bi bi-box me-2 text-primary"></i>
        Item Management
    </h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>
        Add New Item
    </a>
</div>

<!-- Search Bar -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-6">
                <label for="searchTerm" class="form-label">Search Items</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm"
                           value="@Model.SearchTerm" placeholder="Search by SKU, name, or description">
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>
                        Search
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>
                        Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Items Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-bottom">
        <h5 class="card-title mb-0">
            <i class="bi bi-list-ul me-2 text-primary"></i>
            Items (@Model.Items.Count)
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        <th>SKU</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>UOM</th>
                        <th class="text-center">Lot Tracking</th>
                        <th class="text-center">Serial Tracking</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr class="@(item.IsActive ? "" : "table-secondary")">
                            <td class="fw-medium">
                                <code>@item.Sku</code>
                            </td>
                            <td>
                                <div class="fw-medium">@item.Name</div>
                                @if (item.Barcodes.Any())
                                {
                                    <small class="text-muted">Barcodes: @string.Join(", ", item.Barcodes.Take(2))</small>
                                }
                            </td>
                            <td>
                                <span class="text-muted">@(string.IsNullOrEmpty(item.Description) ? "No description" : item.Description)</span>
                            </td>
                            <td>
                                <span class="badge bg-info">@item.UnitOfMeasure</span>
                            </td>
                            <td class="text-center">
                                @if (item.RequiresLot)
                                {
                                    <i class="bi bi-check-circle text-success" title="Lot tracking required"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle text-muted" title="No lot tracking"></i>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.RequiresSerial)
                                {
                                    <i class="bi bi-check-circle text-success" title="Serial tracking required"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle text-muted" title="No serial tracking"></i>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-outline-primary" title="Edit Item">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-controller="Inventory" asp-action="Index" asp-route-searchTerm="@item.Sku"
                                       class="btn btn-outline-info" title="View Stock">
                                        <i class="bi bi-stack"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-inbox fs-1 mb-3"></i>
                <p class="mb-0">No items found</p>
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                {
                    <p>Try adjusting your search criteria</p>
                }
                else
                {
                    <p>Get started by adding your first item</p>
                    <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle me-1"></i>
                        Add New Item
                    </a>
                }
            </div>
        }
    </div>
</div>