@model CreateLocationViewModel
@{
    ViewData["Title"] = "Create New Location";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="bi bi-plus-circle me-2 text-primary"></i>
        Create New Location
    </h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>
        Back to Locations
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow">
            <div class="card-header bg-primary bg-opacity-10 border-bottom">
                <h5 class="card-title mb-0 text-primary">
                    <i class="bi bi-geo-alt me-2"></i>
                    Location Information
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="row g-3">
                        <!-- Basic Information -->
                        <div class="col-md-6">
                            <label for="Code" class="form-label">Location Code <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-qr-code"></i>
                                </span>
                                <input asp-for="Code" class="form-control" placeholder="Enter location code" required/>
                            </div>
                            <span asp-validation-for="Code" class="text-danger"></span>
                            <div class="form-text">Unique identifier for this location</div>
                        </div>

                        <div class="col-md-6">
                            <label for="Name" class="form-label">Location Name <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-tag"></i>
                                </span>
                                <input asp-for="Name" class="form-control" placeholder="Enter location name" required/>
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label for="WarehouseId" class="form-label">Warehouse</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-building"></i>
                                </span>
                                <select asp-for="WarehouseId" class="form-select">
                                    <option value="1">Main Warehouse</option>
                                </select>
                            </div>
                            <span asp-validation-for="WarehouseId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label for="Capacity" class="form-label">Capacity</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-box-seam"></i>
                                </span>
                                <input asp-for="Capacity" class="form-control" type="number" min="0" placeholder="0 (unlimited)"/>
                            </div>
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                            <div class="form-text">Leave as 0 for unlimited capacity</div>
                        </div>

                        <!-- Divider -->
                        <div class="col-12">
                            <hr class="my-4">
                            <h6 class="text-muted">Location Properties</h6>
                        </div>

                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="IsPickable" class="form-check-input" type="checkbox"/>
                                <label class="form-check-label" for="IsPickable">
                                    <i class="bi bi-box-arrow-up me-1"></i>
                                    Pickable Location
                                </label>
                            </div>
                            <div class="form-text">Allow picking operations from this location</div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-check form-switch">
                                <input asp-for="IsReceivable" class="form-check-input" type="checkbox"/>
                                <label class="form-check-label" for="IsReceivable">
                                    <i class="bi bi-box-arrow-in-down me-1"></i>
                                    Receivable Location
                                </label>
                            </div>
                            <div class="form-text">Allow receiving operations to this location</div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="col-12 pt-3">
                            <div class="d-flex gap-2 justify-content-end">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Create Location
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function() {
            // Generate location code based on name
            $('#Name').on('input', function() {
                if ($('#Code').val() === '') {
                    const name = $(this).val();
                    const code = name.toUpperCase()
                                    .replace(/[^A-Z0-9\s]/g, '')
                                    .replace(/\s+/g, '-')
                                    .substring(0, 15);
                    $('#Code').val(code);
                }
            });
        });
    </script>
}