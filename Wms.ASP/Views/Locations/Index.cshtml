@model LocationManagementViewModel
@{
    ViewData["Title"] = "Location Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="bi bi-geo-alt me-2 text-primary"></i>
        Location Management
    </h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>
        Add New Location
    </a>
</div>

<!-- Search Bar -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-6">
                <label for="searchTerm" class="form-label">Search Locations</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm"
                           value="@Model.SearchTerm" placeholder="Search by code or name">
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>
                        Search
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>
                        Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Locations Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-bottom">
        <h5 class="card-title mb-0">
            <i class="bi bi-list-ul me-2 text-primary"></i>
            Locations (@Model.Locations.Count)
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Locations.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th class="text-center">Pickable</th>
                        <th class="text-center">Receivable</th>
                        <th class="text-end">Capacity</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var location in Model.Locations)
                    {
                        <tr class="@(location.IsActive ? "" : "table-secondary")">
                            <td class="fw-medium">
                                <code>@location.Code</code>
                            </td>
                            <td>
                                <div class="fw-medium">@location.Name</div>
                                @if (!string.IsNullOrEmpty(location.FullPath) && location.FullPath != location.Code)
                                {
                                    <small class="text-muted">@location.FullPath</small>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">@(location.ParentLocationId.HasValue ? "Sub-Location" : "Main Location")</span>
                            </td>
                            <td class="text-center">
                                @if (location.IsPickable)
                                {
                                    <i class="bi bi-check-circle text-success" title="Pickable"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle text-muted" title="Not Pickable"></i>
                                }
                            </td>
                            <td class="text-center">
                                @if (location.IsReceivable)
                                {
                                    <i class="bi bi-check-circle text-success" title="Receivable"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle text-muted" title="Not Receivable"></i>
                                }
                            </td>
                            <td class="text-end">
                                @if (location.Capacity > 0)
                                {
                                    <span>@location.Capacity.ToString("N0")</span>
                                }
                                else
                                {
                                    <span class="text-muted">Unlimited</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (location.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <button type="button" class="btn btn-outline-primary" title="Edit Location">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <a asp-controller="Inventory" asp-action="Index" asp-route-searchTerm="@location.Code"
                                       class="btn btn-outline-info" title="View Stock">
                                        <i class="bi bi-stack"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-geo-alt fs-1 mb-3"></i>
                <p class="mb-0">No locations found</p>
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                {
                    <p>Try adjusting your search criteria</p>
                }
                else
                {
                    <p>Get started by adding your first location</p>
                    <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle me-1"></i>
                        Add New Location
                    </a>
                }
            </div>
        }
    </div>
</div>